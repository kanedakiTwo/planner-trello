{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "bd744475-159a-4aab-9224-6cb0fb76157b",
  "packageName": "com.planner.teamsbot",
  "developer": {
    "name": "Planner App",
    "websiteUrl": "https://planner-trello-production.up.railway.app",
    "privacyUrl": "https://planner-trello-production.up.railway.app/privacy",
    "termsOfUseUrl": "https://planner-trello-production.up.railway.app/terms"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Planner",
    "full": "Planner - Gestion de Tareas"
  },
  "description": {
    "short": "Notificaciones y gestion de tareas en Planner",
    "full": "Bot de Planner para recibir notificaciones y crear tareas directamente desde Teams. Vincula tu cuenta escribiendo 'conectar', usa '/tableros' para ver tableros y '/tarea' para crear tareas."
  },
  "accentColor": "#3B82F6",
  "bots": [
    {
      "botId": "bd744475-159a-4aab-9224-6cb0fb76157b",
      "scopes": [
        "personal"
      ],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": ["personal"],
          "commands": [
            {
              "title": "conectar",
              "description": "Vincula tu cuenta de Planner para recibir notificaciones"
            },
            {
              "title": "ayuda",
              "description": "Muestra los comandos disponibles"
            },
            {
              "title": "estado",
              "description": "Verifica el estado de tu vinculacion"
            },
            {
              "title": "/tableros",
              "description": "Lista todos los tableros disponibles"
            },
            {
              "title": "/tarea",
              "description": "Crea una tarea en un tablero"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "planner-trello-production.up.railway.app"
  ]
}
